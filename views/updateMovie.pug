doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles.css")
        title Update Movie
    include ./header.pug
    body 
        main
            a(href="./movies") Go back 
            h3 Update Movie
            section
                form(id="updateForm"  method="post") 
                        legend Poster(url)
                        input(type="text" name ="img" value:movies.img)
                        legend Title
                        input(type="text" name ="title" value:movie.title )
                        legend Year
                        input(type="number" name ="year" )
                        legend Director
                        input(type="text" name ="director" )
                        legend Genre
                        input(type="text" name ="genre" )
                        legend Runtime
                        input(type="text" name ="runtime" )
                        legend Plot
                        input(type="text" name ="plot" )
                        legend Actors
                        input(type="text" name ="actors" )
                        legend Ratings 
                        input(type="text" name ="ratings" )
                        legend Language
                        input(type="text" name ="language")
                        br
                        button(type="submit" id="updateMovie" name="updateButton" value="Update") Update
        include ./footer.pug
        script(type="text/javascript" src="/scripts.js")