doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles.css")
        title Update Movie
    include ./header.pug
    body 
        main
            a(href="./movies") Go back 
            h3 Update Movie
            section

                        legend Poster(url)
                        input(type="text" name ="img" required)
                        legend Title
                        input(type="text" name ="title" required)
                        legend Year
                        input(type="number" name ="year" required)
                        legend Director
                        input(type="text" name ="director" required)
                        legend Genre
                        input(type="text" name ="genre" required)
                        legend Runtime
                        input(type="text" name ="runtime" required)
                        legend Plot
                        input(type="text" name ="plot" required)
                        legend Actors
                        input(type="text" name ="actors" required)
                        legend Ratings 
                        input(type="text" name ="ratings" required)
                        legend Language
                        input(type="text" name ="language" required)
                        br
                        input(type="submit" value="Update movie" id="updateMovie")
         
        include ./footer.pug
        script(type="text/javascript" src="/scripts.js")