doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        include ./header.pug
        main
            h3 Search User
            //- form(action="/search" method="post")
            //-   label(for="title") title 
            //-   input(name="title" id="title" placeholder="Title" required)
            //-   input(type="submit" class="post_title" value="Search movie")
            
            form(action="/search" method="post" target="_blank" id="form1")
                label(for="fname") Nombre de la pelicula : 
                input(type="text" id="fname" name="title")
                input(type="submit" value="Introducir Pelicula")


            if movies
                section
                    each film, index in movies 
                        img(src=film[index] .Poster)
                        h1 Title: #{film[index].Title}
                        p Year: #{film[index].Year}
                        p Director: #{film[index].Director}
                        p Genre: #{film[index].Genre}
                        p Runtime: #{film[index].Runtime}
                        p Plot : #{film[index].Plot}
                        p Actors : #{film[index].Actors}
                        p Ratings: #{film[index].Ratings} 
                        p Language : #{film[index].Language}
                        button(id=`addFav${index}`) Add to favorites 
            
        include ./footer.pug
        script(type="text/javascript" src="/scripts.js")